<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android"
    android:enterFadeDuration="400"
    android:exitFadeDuration="400">

    <item android:state_enabled="true"
        android:state_pressed="true" android:drawable="@color/themeLight2" />
    <item android:state_enabled="true"
        android:state_focused="true" android:drawable="@color/themeLight2" />
    <item android:state_enabled="true"
        android:state_selected="true" android:drawable="@color/themeLight2" />

    <item android:state_activated="true" android:drawable="@color/themeLight2"/>

    <item android:drawable="@color/themeLight"/>
</selector>